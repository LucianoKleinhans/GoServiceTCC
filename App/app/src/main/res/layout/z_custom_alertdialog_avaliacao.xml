<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Prestador"
    style="?android:attr/spinnerItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/retangle_border_view_2"
    android:paddingTop="5dp"
    android:singleLine="false"
    android:textAlignment="inherit"
    android:layout_marginBottom="5dp"
    android:textColor="#d5d5d5"
    android:padding="5dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmaAvaliacao"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#009f10"
        android:text="Confirmar"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star_3_avaliacao" />

    <ImageView
        android:id="@+id/star_2_avaliacao"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_star"
        app:layout_constraintEnd_toStartOf="@+id/star_3_avaliacao"
        app:layout_constraintTop_toBottomOf="@+id/ttvNomePrestador"
        />

    <ImageView
        android:id="@+id/star_1_avaliacao"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_star"
        app:layout_constraintEnd_toStartOf="@+id/star_2_avaliacao"
        app:layout_constraintTop_toBottomOf="@+id/ttvNomePrestador"
        />

    <ImageView
        android:id="@+id/star_4_avaliacao"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/star_3_avaliacao"
        app:layout_constraintTop_toBottomOf="@+id/ttvNomePrestador"
        android:background="@drawable/ic_star" />

    <ImageView
        android:id="@+id/star_5_avaliacao"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/star_4_avaliacao"
        app:layout_constraintTop_toBottomOf="@+id/ttvNomePrestador"
        android:background="@drawable/ic_star" />

    <ImageView
        android:id="@+id/star_3_avaliacao"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttvNomePrestador"
        android:background="@drawable/ic_star" />

    <TextView
        android:id="@+id/ttvNomePrestador"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:text="Avaliacao"
        android:textAlignment="center"
        android:textColor="#d5d5d5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
